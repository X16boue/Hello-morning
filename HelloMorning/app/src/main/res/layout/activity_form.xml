<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8EFCD"
    tools:context=".FormActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="Hello Minjoo!"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="#EED056"
            android:shadowColor="#C39F0E"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="2.0"
            android:textSize="25sp"
            android:id="@+id/helloUser" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="132dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/umbrella"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="umbrella" />

            <CheckBox
                android:id="@+id/bike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bike" />

            <CheckBox
                android:id="@+id/scooter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="scooter" />

            <CheckBox
                android:id="@+id/car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="car" />
        </LinearLayout>

        <Button
            android:id="@+id/jumpToHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HomePage" />

        <Button
            android:id="@+id/submitForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_view_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please tell us your name: "
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="50dp" />

    <EditText
        android:id="@+id/input_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="70dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

