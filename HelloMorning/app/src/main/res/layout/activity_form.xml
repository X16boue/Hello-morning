<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8EFCD"
    tools:context=".FormActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/helloUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:shadowColor="#C39F0E"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="2.0"
                    android:text="Hello Minjoo!"
                    android:textAlignment="center"
                    android:textColor="#EED056"
                    android:textSize="25sp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="16dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please tell us your name: "
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="52dp" />

                <EditText
                    android:id="@+id/name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:orientation="horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:orientation="horizontal"
                    android:text="Please tell us the name of city of your workplace: "
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="155dp" />

                <EditText
                    android:id="@+id/work_city_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:orientation="horizontal" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <LinearLayout
                android:id="@+id/equipment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please indicate whether you possess these equipments:"/>

                <CheckBox
                    android:id="@+id/mask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="mask" />

                <CheckBox
                    android:id="@+id/umbrella"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="umbrella" />

                <CheckBox
                    android:id="@+id/raincoat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="raincoat" />

                <CheckBox
                    android:id="@+id/sunglasses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="sunglasses" />

                <CheckBox
                    android:id="@+id/parasol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="parasol" />

                <CheckBox
                    android:id="@+id/waterbottle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="water bottle" />

                <CheckBox
                    android:id="@+id/cap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="cap" />

                <CheckBox
                    android:id="@+id/hat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="hat" />

                <CheckBox
                    android:id="@+id/scarf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="scarf" />

                <CheckBox
                    android:id="@+id/gloves"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="gloves" />

                <CheckBox
                    android:id="@+id/thermomask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="thermo mask" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/transportation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please indicate whether you possess these means of transportation:"/>

                <CheckBox
                    android:id="@+id/car"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="car" />

                <CheckBox
                    android:id="@+id/bike"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="bike" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/jumpToHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HomePage" />

                <Button
                    android:id="@+id/submitForm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

