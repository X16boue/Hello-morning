<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8EFCD"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/helloUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:shadowColor="#C39F0E"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="2.0"
                android:text="Hello Minjoo!"
                android:textAlignment="center"
                android:textColor="#EED056"
                android:textSize="25sp" />

            <RadioGroup
                android:id="@+id/checklist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/didYouTake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#F9D35D"
                    android:text="Did you take?" />

                <CheckBox
                    android:id="@+id/check_Mask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mask" />

                <CheckBox
                    android:id="@+id/check_Umbrella"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Umbrella" />

                <CheckBox
                    android:id="@+id/check_Custom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New-to-do"
                    android:textColor="#A49F89" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bestTransportOption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#F9D35D"
                    android:text="Best transport option" />

                <TextView
                    android:id="@+id/suggestTransport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subway" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/weeklyGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#F9D35D"
                    android:text="Your weekly goal:"

                    />

                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1">

                    <TableRow>

                        <TextView
                            android:layout_width="0dip"
                            android:layout_weight="1"
                            android:text="Mon" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_weight="1"
                            android:text="Tue" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_weight="1"
                            android:text="Wed" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_weight="1"
                            android:text="Thu" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_weight="1"
                            android:text="Fri" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_weight="1"
                            android:text="Sat" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_weight="1"
                            android:text="Sun" />
                    </TableRow>

                    <TableRow>

                        <CheckBox
                            android:id="@+id/checkbox_Mon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="onCheckboxClicked" />

                        <CheckBox
                            android:id="@+id/checkbox_Tue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="onCheckboxClicked" />

                        <CheckBox
                            android:id="@+id/checkbox_Wed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="onCheckboxClicked" />

                        <CheckBox
                            android:id="@+id/checkbox_Thu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="onCheckboxClicked" />

                        <CheckBox
                            android:id="@+id/checkbox_Fri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="onCheckboxClicked" />

                        <CheckBox
                            android:id="@+id/checkbox_Sat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="onCheckboxClicked" />

                        <CheckBox
                            android:id="@+id/checkbox_Sun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="onCheckboxClicked" />
                    </TableRow>
                </TableLayout>


                <Button
                    android:id="@+id/jumpToForm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go to Form" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>